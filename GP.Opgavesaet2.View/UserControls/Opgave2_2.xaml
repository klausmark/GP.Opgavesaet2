<UserControl x:Class="GP.Opgavesaet2.View.UserControls.Opgave2_2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:GP.Opgavesaet2.View.UserControls"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=Opgave22ViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" FontSize="20" TextAlignment="Center" Text="Opgave 2.2 - Imperial to metric"/>
        <StackPanel>
            <userControls:ConverterUserControl DataContext="{Binding AreaConverterViewModel}" />
            <userControls:ConverterUserControl DataContext="{Binding DistanceConverterViewModel}" />
            <userControls:ConverterUserControl DataContext="{Binding VolumeConverterViewModel}" />
            <userControls:ConverterUserControl DataContext="{Binding WeightConverterViewModel}" />
        </StackPanel>
    </DockPanel>
</UserControl>
